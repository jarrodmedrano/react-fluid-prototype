<section data-grid="col-12" class="context-pdp-hero">
    <div data-grid="col-6">

    </div>
    <div data-grid="col-6" itemscope itemtype="http://schema.org/Product">
        <h1 class="c-heading-1">{{product-detail.hero.heading}}</h1>
        {{> rating-template product-detail.hero.rating }}
        {{> price-template product-detail.hero.price }}

        <div data-grid="col-12 pad-3x">
            <h2 class="c-subheading-6" data-grid="col-12">POPULAR CONFIGURATIONS</h2>
            {{#each product-detail.hero.configurations}}
                <div data-grid="col-6">
                    {{> button-template this }}
                </div>
            {{/each}}

        </div>
        <div data-grid="col-12 pad-3x">
            {{#each product-detail.hero.calls-to-action}}
                <div data-grid="col-6">
                    {{> call-to-action-template this }}
                </div>
            {{/each}}

            <p class="c-paragraph-3" data-grid="col-12"><small class="c-caption-2">Free shipping. Free returns.</small></p>
        </div>
    </div>
</section>

<section data-grid="col-12 pad-12x">
    <div data-grid="col-3">
        <span class="c-glyph glyph-edit"></span>
        <p class="c-paragraph">Surface Pro 4's <strong>12.3-inch PixelSense display</strong> has extremely high contrast and low glare.</p>
    </div>
    <div data-grid="col-3">
        <span class="c-glyph glyph-edit"></span>
        <p class="c-paragraph">The <strong>6th Gen Intel Core m3, i5, and i7 processors</strong> are not only more powerful, they're quieter, run cooler, and are more efficient than before.</p>
    </div>
    <div data-grid="col-3">
        <span class="c-glyph glyph-edit"></span>
        <p class="c-paragraph">Writing with <strong>Surface Pen</strong> (included) feels as fluid and precise as a ballpoint pen on paper.</p>
    </div>
    <div data-grid="col-3">
        <span class="c-glyph glyph-edit"></span>
        <p class="c-paragraph">Surface Pro 4 runs <strong>Windows 10 Pro</strong>, the best combination of the Windows you already know plus lots of great new features you'll love.</p>
    </div>
    <div data-grid="col-12" class="x-type-center">
        <a href="./" class="c-call-to-action c-glyph">SHOW ALL TECH SPECS</a>
    </div>
</section>

<div data-grid="col-12">
    {{> feature-template product-detail.surface-tablet-feature}}
</div>

<section data-grid="col-12">
    <div data-grid="col-6" class="c-placement-container theme-light">
        {{> mosaic-placement-template product-detail.accessory-placement }}
    </div>
    <div data-grid="col-3" class="c-placement-container theme-light">
        {{> mosaic-placement-template product-detail.histogram-placement }}
    </div>
    <div data-grid="col-3" class="c-placement-container theme-light">
        {{> mosaic-placement-template product-detail.editorial-placement }}
    </div>
</section>

<div data-grid="col-12" class="theme-light">
    {{> feature-template product-detail.surface-vertasility-feature}}
</div>

<div data-grid="col-12">
    {{> feature-template product-detail.surface-performance-feature}}
    {{> feature-template product-detail.surface-windows-feature}}
    {{> feature-template product-detail.surface-advanced-feature}}
</div>

<section data-grid="col-12 pad-12x">
    <div class="c-table f-divided">
        <table summary="{{ product-detail.surface-table-feature.content.summary }}">
            <thead>
                <tr>
                    <th scope="col">{{ product-detail.surface-table-feature.content.col-1-heading }}</th>
                    <th scope="col">{{ product-detail.surface-table-feature.content.col-2-heading }}</th>
                    <th scope="col">{{ product-detail.surface-table-feature.content.col-3-heading }}</th>
                    <th scope="col">{{ product-detail.surface-table-feature.content.col-4-heading }}</th>
            </thead>
            <tbody>
                {{#each product-detail.surface-table-feature.content.rows}}
                <tr>
                    <td>
                        <p class="c-paragraph"><b>{{ title }}</b></p>
                        <p class="c-paragraph">{{ subtitle }}</p>
                        {{> call-to-action-template call-to-action }}
                    </td>
                    <td>
                        <p class="c-paragraph">{{ description }}</p>
                    </td>
                    <td>
                        <ul class="c-list">
                            {{#each list-1 }}
                            <li>{{ li }}</li>
                            {{/each}}
                        </ul>
                    </td>
                    <td>
                        <ul class="c-list">
                            {{#each list-2 }}
                            <li>{{ li }}</li>
                            {{/each}}
                        </ul>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</section>

<section class="theme-light" data-grid="col-12">
    <h1 class="c-heading-6">Add histogram and reviews here</h1>
</section>

